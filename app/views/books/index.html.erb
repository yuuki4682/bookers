

<div class="flash-message"><%= flash[:notice] %></div>


<div class="books-index">
  <h1>books</h1>
  <table class="book-table">
    <tr>
      <th>TITLE</th>
      <th>BODY</th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
     <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
    </table>
</div>


<div class="new-book">
  
  <h2>New Book</h2>

  <div class="error">
    <% if @book.errors.any? %>
      <p class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved</p>
      <ul class="error-contents">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @book, url: '/books', method: :post do |book| %>
  
   <div class="book-input">
      <p>title</p>
      <%= book.text_field :title %>
    </div> 
  
    <div class="book-input">
      <p>body</p>
      <%= book.text_area :body %>
    </div>
    <div class="submit">
      <%= book.submit 'Create Book'%>
    </div>
  <% end %>
  </div>